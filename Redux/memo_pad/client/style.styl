// =Variables
borderGrey = #e1e7ef
green = #13ce66
red = #ff5216
uiGrey = #8492a6

// =Default Settings
* 
  box-sizing: border-box
  margin: 0

html 
	font-family: 'Lato', sans-serif
	font-size: 15px
	line-height: 1.4
	color: #181818

ul, ol
  list-style-type: none
  padding: 0

a
  display: block
  text-decoration: none
  color: inherit
  opacity: 1
  transition: all 0.2s ease-in-out
a:hover
  opacity: 0.5

button
  padding: 0
  border: none
  background: none
  opacity: 1
  transition: all 0.2s ease-in-out
button:focus,
button:hover
  opacity: 0.5
  cursor: pointer
  outline: none
  
.sr-only
  font-size: 0

// =Main
.main
  display: flex

// =Sidebar
.sidebar
  width: 25%
  height: 100vh
  border-right: 1px solid borderGrey
  overflow: scroll
  .sidebar-util
    padding: 2rem
  .sidebar-item
    display: block
    padding: 2rem
    border-bottom: 1px solid borderGrey

// =Right Panel
.post-view,
.map,
.post-form
  width: 75%
  height: 100vh
  padding: 1rem

// =Post form
.post-form > form,
.post-view > .post
  width: 90%
  margin: 0 auto
  padding: 2rem
  
.post-title,
.post-content 
  display: block
  width: 100%
  border: none
  font-family: inherit
  
.post-title:focus,
.post-content:focus
  outline: none

.post-title
  font-size: 1.33rem
  line-height: 1.35

.post-content
  font-size: 1rem
  line-height: 1.8
  height: 70vh

.post-util
  display: flex
  justify-content: flex-end

.btn
  margin-right: 2rem
  font-size: 1rem
  line-height: 1.67
  color: uiGrey
  &--red
    margin-right: 0
    color: red
  &--green
    margin-right: 0
    color: green